{
  "name": "nc-view",
  "displayName": "NC Viewer",
  "description": "Interactive 3D G-code viewer for VS Code",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Visualization"
  ],
  "publisher": "gengar",
  "repository": {
    "type": "git",
    "url": "https://github.com/noahlias/nc_view_vscode.git"
  },
  "homepage": "https://github.com/noahlias/nc_view_vscode",
  "bugs": {
    "url": "https://github.com/noahlias/nc_view_vscode/issues"
  },
  "icon": "assets/icon.png",
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ncViewer.open",
        "title": "Open NC Viewer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname =~ /\\.(nc|gcode|cnc)$/",
          "command": "ncViewer.open",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname =~ /\\.(nc|gcode|cnc)$/",
          "command": "ncViewer.open",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceExtname =~ /\\.(nc|gcode|cnc)$/",
          "command": "ncViewer.open",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "gcode",
        "aliases": [
          "G-code",
          "NC",
          "CNC"
        ],
        "extensions": [
          ".nc",
          ".gcode",
          ".cnc",
          ".tap",
          ".prg"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
